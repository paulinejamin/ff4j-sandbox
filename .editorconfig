root = true

[*.java]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
curly_bracket_next_line = false
spaces_around_operators = true
spaces_around_brackets = outside
charset = utf-8

[*.xml]
indent_style = space
indent_size = 4
charset = utf-8

[*.yml]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
charset = utf-8
